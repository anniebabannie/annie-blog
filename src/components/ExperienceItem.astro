---
const { company, companySubtitle, children } = Astro.props
---

<div class="grid md:grid-cols-12 gap-12">
  <div class="text-center md:col-span-4 md:text-right">
    <h3 class="uppercase text-3xl font-bold mb-4">{company}</h3>
    {companySubtitle &&
    <h4>{companySubtitle}</h4>
    }
  </div>
  <div class="md:col-span-8 border-0 border-l-4 border-teal-600 pl-12 relative">
    {children}
  </div>
</div>